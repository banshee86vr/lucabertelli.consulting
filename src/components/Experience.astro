---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const contactSlug = `/${lang || ""}/contact`;
---

<!-- Text Slider start -->
<section class="about__textslider-area pb-100">
  <div class="about__textslider">
    <div
      class="swiper text__slider"
      data-autoPlay="true"
      data-sliderSpeed="40000"
    >
      <div class="swiper-wrapper">
        <div class="swiper-slide">
          <div class="text-slide-content">
            <h2 class="title">{t('index.experience.skills')}</h2>
          </div>
        </div>
        <div class="swiper-slide">
          <div class="text-slide-content">
            <h2 class="title">{t('index.experience.experiences')}</h2>
          </div>
        </div>
        <div class="swiper-slide">
          <div class="text-slide-content">
            <h2 class="title">{t('index.experience.services')}</h2>
          </div>
        </div>
        <div class="swiper-slide">
          <div class="text-slide-content">
            <h2 class="title">{t('index.experience.educations')}</h2>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Text Slider end -->

<!-- Experience area start -->
<section class="about__experience-area pb-130">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-sm-6">
        <div class="about__experience-list has_fade_anim" data-fade-from="left">
          <div class="about__experience-grid">
            <div class="about__experience">
              <p>
                <i class="fa-regular fa-calendar-days"></i> 2024 -
              </p>
              <p class="title">Cloud Native & DevOps Consultant</p>
              <p class="company">Freelance</p>
            </div>
            <div class="about__experience">
              <p>
                <i class="fa-regular fa-calendar-days"></i> 2023 - 2024
              </p>
              <p class="title">Client Success Manager & Co-Founder</p>
              <p class="company">
                <a href="https://www.krateo.io" target="_blank"
                  >Krateo PlatformOps</a>
              </p>
            </div>
            <div class="about__experience">
              <p>
                <i class="fa-regular fa-calendar-days"></i> 2022 - 2024
              </p>
              <p class="title">Cloud Native Engineering Manager</p>
              <p class="company">
                <a href="https://www.kiratech.it" target="_blank">Kiratech</a>
              </p>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-4 col-sm-6">
        <div
          class="about__experience-list has_fade_anim"
          data-fade-from="left"
          data-delay="0.7"
        >
          <div class="about__experience-grid">
            <div class="about__experience">
              <p>
                <i class="fa-regular fa-calendar-days"></i> 2019 - 2022
              </p>
              <p class="title">Cloud Native Engineer</p>
              <p class="company">
                <a href="https://www.kiratech.it" target="_blank">Kiratech</a>
              </p>
            </div>
            <div class="about__experience">
              <p>
                <i class="fa-regular fa-calendar-days"></i> 2018 - 2019
              </p>
              <p class="title">DevOps Engineer</p>
              <p class="company">
                <a href="https://www.asem.it" target="_blank">ASEM</a>
              </p>
            </div>
            <div class="about__experience">
              <p>
                <i class="fa-regular fa-calendar-days"></i> 2014 - 2018
              </p>
              <p class="title">Oracle Tuxedo Engineering</p>
              <p class="company">
                <a
                  href="https://www.linkedin.com/company/value-transformation-services/"
                  target="_blank">Value Transformation Services</a
                >
              </p>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-4 col-sm-6">
        <div
          class="about__experience-list has_fade_anim"
          data-fade-from="left"
          data-delay="0.7"
        >
          <div class="about__experience-grid">
            <div class="about__experience">
              <p>
                <i class="fa-regular fa-calendar-days"></i> 2011 - 2014
              </p>
              <p class="title">Technology Architecture Sr. Analyst</p>
              <p class="company">
                <a href="https://www.accenture.it" target="_blank">Accenture</a>
              </p>
            </div>
            <div class="about__experience">
              <p>
                <i class="fa-regular fa-calendar-days"></i> 2009 - 2011
              </p>
              <p class="title">Software developer</p>
              <p class="company">
                <a href="https://www.accenture.it" target="_blank">Accenture</a>
              </p>
            </div>
            <div class="about__experience">
              <p>
                <i class="fa-regular fa-calendar-days"></i> 2008 - 2009
              </p>
              <p class="title">Software Developer</p>
              <p class="company">
                <a href="https://www.adawen.it/" target="_blank">Adawen</a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Experience area end -->

<!-- Notification section start-->
<section class="lb__notification pb-130">
  <div class="container">
    <div class="row">
      <div class="col-xxl-12">
        <div class="lb__notification-wrapper has_fade_anim" data-fade-from="top" data-duration="3"
          data-fade-offset="150" data-ease="bounce">
          <div class="lb__notification-grid">
            <div class="lb__notification-left">
              <div class="lb__notification-thumb cf_image">
                <img src="/notification/notification.png" alt="notification">
              </div>
              <div class="lb__notification-content">
                <h2 class="lb__notification-title">{t('index.experience.contact.title')}</h2>
              </div>
            </div>
            <div class="lb__notification-right">
              <div class="cf_text">
                <p>{t('index.experience.contact.text')}</p>
              </div>
              <div class="cf_btn">
                <a href={contactSlug} class="wc-btn-primary btn-rollover-top">{t("nav.contact")}
                  <i class="fa-solid fa-arrow-right"></i>
                </a>
              </div>
            </div>
          </div>

          <img class="lb__notification-sh1" src="/notification/shape-01.png" alt="image">
          <img class="lb__notification-sh2" src="/notification/shape-02.png" alt="image">
          <img class="lb__notification-sh3" src="/notification/shape-03.png" alt="image">
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Notification area end -->
---
const title = "lucabertelli.consulting";

import "../styles/all.min.css";
import "../styles/bootstrap.min.css";
import "../styles/swiper-bundle.min.css";
import "../styles/progressbar.css";
import "../styles/meanmenu.min.css";
import "../styles/master.css";
import "../styles/style.css";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import { getLangFromUrl, useTranslations } from "../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

import { SEO } from "astro-seo";
---

<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Luca Bertelli Consulting Services" />

    <SEO
      title={title}
      description={t('index.hi')}
      openGraph={{
        basic: {
          title: "lucabertelli.consulting",
          type: "website",
          image: "/about/lucabertelli.jpg",
        }
      }}
    />

    <title>{title}</title>

    <!-- Fav Icon -->
    <link rel="icon" type="image/x-icon" href="/favicon.svg" />
  </head>

  <body class="font-heading-estedad">
    <!-- Preloader -->
    <!-- <div id="preloader">
      <div id="container" class="container-preloader">
        <div class="animation-preloader">
          <div class="spinner"></div>
          <div class="txt-loading">
            <span data-text="L" class="characters">L</span>
            <span data-text="B" class="characters">B</span>
          </div>
        </div>
        <div class="loader-section section-left"></div>
        <div class="loader-section section-right"></div>
      </div>
    </div> -->

    <!-- Sroll to top -->
    <div class="progress-wrap">
      <svg
        class="progress-circle svg-content"
        width="100%"
        height="100%"
        viewBox="-1 -1 102 102"
      >
        <path d="M50,1 a49,49 0 0,1 0,98 a49,49 0 0,1 0,-98"></path>
      </svg>
    </div>

    <div class="has-smooth" id="has_smooth"></div>
    <div id="smooth-wrapper">
      <div id="smooth-content">
        <div class="body-wrapper">
          <!-- Header area start -->
          <Header />
          <!-- Header area end -->
          <main>
            <slot />
          </main>

          <!-- Footer section start -->
          <Footer />
          <!-- Footer section end -->
        </div>
      </div>
    </div>

    <script is:inline src="https://code.jquery.com/jquery-3.7.0.min.js"
    ></script>
    <script is:inline src="/scripts/bootstrap.bundle.min.js"></script>
    <script is:inline src="/scripts/jquery.magnific-popup.min.js"></script>
    <script is:inline src="/scripts/swiper-bundle.min.js"></script>
    <script is:inline src="/scripts/counter.js"></script>
    <script is:inline src="/scripts/typed.js"></script>
    <script is:inline src="/scripts/mixitup.min.js"></script>
    <script is:inline src="/scripts/progressbar.js"></script>
    <script is:inline src="/scripts/gsap.min.js"></script>
    <script is:inline src="/scripts/ScrollSmoother.min.js"></script>
    <script is:inline src="/scripts/ScrollToPlugin.min.js"></script>
    <script is:inline src="/scripts/ScrollTrigger.min.js"></script>
    <script is:inline src="/scripts/SplitText.min.js"></script>
    <script is:inline src="/scripts/TweenMax.min.js"></script>
    <script is:inline src="/scripts/jquery.meanmenu.min.js"></script>
    <script is:inline src="/scripts/tilt.jquery.min.js"></script>
    <script is:inline src="/scripts/beforeafter.jquery-1.0.0.min.js"></script>
    <script is:inline src="/scripts/basictable.min.js"></script>
    <script is:inline src="/scripts/backToTop.js"></script>
    <script is:inline src="/scripts/main.js"></script>
    <script is:inline src="/scripts/error-handling.js"></script>
    <script is:inline src="/scripts/offcanvas.js"></script>
  </body>
</html>

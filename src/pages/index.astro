---
import Layout from "../layouts/Layout.astro";
---

<Layout title="lucabertelli.consulting">
  <main>
    <!-- Hero area start -->
    <section class="about__hero pt-150 pb-120">
      <div class="container">
        <div class="row">
          <div class="col-lg-4">
            <div class="about__hero-left">
              <h1 class="sec-sub-title">About Luca</h1>
              <img src="/about/shape-2.png" alt="Shape" class="shape-2" />
            </div>
          </div>
          <div class="col-lg-8">
            <div class="about__hero-right">
              <h2 class="about__hero-title has_text_reveal_anim">
                Listening <br /> Advising <br /> & more
              </h2>
              <div class="cf_text has_fade_anim">
                <p>
                  As a DevOps and Cloud Native engineer and advisor, I bring a
                  wealth of hands-on experience and strategic insights to
                  empower businesses in navigating the complexities of modern IT
                  landscapes, ensuring smooth integration, scalability, and
                  optimal performance in the cloud-native ecosystem.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- Hero area end -->

    <!-- Text Slider start -->
    <section class="about__textslider-area pb-100">
      <div class="double-line"></div>
      <div class="about__textslider">
        <div
          class="swiper text__slider"
          data-autoPlay="true"
          data-sliderSpeed="40000"
        >
          <div class="swiper-wrapper">
            <div class="swiper-slide">
              <div class="text-slide-content">
                <h2 class="title">Skills</h2>
              </div>
            </div>
            <div class="swiper-slide">
              <div class="text-slide-content">
                <h2 class="title">Experience</h2>
              </div>
            </div>
            <div class="swiper-slide">
              <div class="text-slide-content">
                <h2 class="title">Education</h2>
              </div>
            </div>
            <div class="swiper-slide">
              <div class="text-slide-content">
                <h2 class="title">Skills</h2>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- Text Slider end -->

    <!-- Education area start -->
    <section class="about__education-area pb-130">
      <div class="container">
        <div class="row">
          <div class="col-md-4 col-sm-12">
            <div class="about__education-img cf_img img_anim_reveal">
              <img src="/about/lucabertelli.jpeg" alt="Luca Bertelli" />
            </div>
          </div>
          <div class="col-md-4 col-sm-6">
            <div
              class="about__education-list has_fade_anim"
              data-fade-from="left"
            >
              <div class="about__education-title-pd">
                <h2 class="about__education-title">Experience</h2>
              </div>
              <div class="about__education-grid">
                <div class="about__education">
                  <p>
                    <i class="fa-regular fa-calendar-days"></i> 2022 - 2024
                  </p>
                  <p class="title">Cloud Native Engineering Manager</p>
                  <p class="company">
                    <a href="https://www.kiratech.it" target="_blank"
                      >Kiratech</a
                    >
                  </p>
                </div>
                <div class="about__education">
                  <p>
                    <i class="fa-regular fa-calendar-days"></i> 2019 - 2022
                  </p>
                  <p class="title">Cloud Native Engineer</p>
                  <p class="company">
                    <a href="https://www.kiratech.it" target="_blank"
                      >Kiratech</a
                    >
                  </p>
                </div>
                <div class="about__education">
                  <p>
                    <i class="fa-regular fa-calendar-days"></i> 2018 - 2019
                  </p>
                  <p class="title">DevOps Engineer</p>
                  <p class="company">
                    <a href="https://www.asem.it" target="_blank">ASEM</a>
                  </p>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-4 col-sm-6">
            <div
              class="about__education-list has_fade_anim"
              data-fade-from="left"
              data-delay="0.7"
            >
              <div class="about__education-title-pd">
                <h2 class="about__education-title">&nbsp;</h2>
              </div>
              <div class="about__education-grid">
                <div class="about__education">
                  <p>
                    <i class="fa-regular fa-calendar-days"></i> 2014 - 2018
                  </p>
                  <p class="title">Oracle Tuxedo Engineering</p>
                  <p class="company">
                    <a
                      href="https://www.linkedin.com/company/value-transformation-services/"
                      target="_blank">Value Transformation Services</a
                    >
                  </p>
                </div>
                <div class="about__education">
                  <p>
                    <i class="fa-regular fa-calendar-days"></i> 2009 - 2014
                  </p>
                  <p class="title">Technology Architecture Sr. Analyst</p>
                  <p class="company">
                    <a href="https://www.accenture.it" target="_blank"
                      >Accenture</a
                    >
                  </p>
                </div>
                <div class="about__education">
                  <p>
                    <i class="fa-regular fa-calendar-days"></i> 2008 - 2009
                  </p>
                  <p class="title">Software Developer</p>
                  <p class="company">
                    <a href="https://www.adawen.it/" target="_blank">Adawen</a>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- Education area end -->

    <!-- Award section start -->
    <section class="about__award-area pt-120 pb-130">
      <div class="container">
        <div class="row">
          <div class="col-lg-9">
            <div class="sec-title-wrapper">
              <h2 class="sec-sub-title has_text_reveal_anim">Certifications</h2>
              <div class="about__award-title-pd">
                <h3 class="about__award-title has_text_reveal_anim">
                  Learning Unbound: Never Stop, Never Settle
                </h3>
              </div>
              <div class="cols-2">
                <div class="line-left">
                  <p>Achievement</p>
                </div>
                <img src="/about/shape-5.png" alt="shape" class="shape arrow" />
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xxl-12">
            <div class="lb-award__list">
              <div class="lb-award__item has_fade_anim">
                <p class="lb-award__number">1</p>
                <p class="lb-award__title">
                  Hashicorp Certified: <br /> Vault Associate
                </p>
                <img
                  src="/about/certifications/hashicorp_vault_associate.png" style="max-height: 100px;width: auto;"
                  class="show-dark"
                  alt="Award Image"
                />
                <p class="lb-award__date">Dec 2020</p>
              </div>
              <div class="lb-award__item has_fade_anim">
                <p class="lb-award__number">2</p>
                <p class="lb-award__title">
                  CNCF: CKA <br /> Certified Kubernetes Administrator
                </p>
                <img
				src="/about/certifications/cncf_cka.png" style="max-height: 100px;width: auto;"
                  class="show-dark"
                  alt="Award Image"
                />
                <p class="lb-award__date">Dec 2020</p>
              </div>
              <div class="lb-award__item has_fade_anim">
                <p class="lb-award__number">3</p>
                <p class="lb-award__title">
                  VMWare Certified Master Specialist <br /> Cloud Native 2021
                </p>
                <img
				src="/about/certifications/vmware_master.png" style="max-height: 100px;width: auto;"
                  class="show-dark"
                  alt="Award Image"
                />
                <p class="lb-award__date">Apr 2021</p>
              </div>
              <div class="lb-award__item has_fade_anim">
                <p class="lb-award__number">4</p>
                <p class="lb-award__title">
                  Hashicorp Certified <br /> Terraform Associate
                </p>
                <img
				src="/about/certifications/hashicorp_terraform_associate.png" style="max-height: 100px;width: auto;"
                  class="show-dark"
                  alt="Award Image"
                />
                <p class="lb-award__date">Aug 2021</p>
              </div>
              <div class="lb-award__item has_fade_anim">
                <p class="lb-award__number">5</p>
                <p class="lb-award__title">GitLab Solution Architect</p>
                <img
				src="/about/certifications/gitlab_solution_architect.png" style="max-height: 100px;width: auto;"
                  class="show-dark"
                  alt="Award Image"
                />
                <p class="lb-award__date">Dec 2021</p>
              </div>
              <div class="lb-award__item has_fade_anim">
                <p class="lb-award__number">6</p>
                <p class="lb-award__title">GitLab Sales Core</p>
                <img
				src="/about/certifications/gitlab_sales.png" style="max-height: 100px;width: auto;"
                  class="show-dark"
                  alt="Award Image"
                />
                <p class="lb-award__date">Dec 2021</p>
              </div>
              <div class="lb-award__item has_fade_anim">
                <p class="lb-award__number">7</p>
                <p class="lb-award__title">
                  Hashicorp Certified <br /> Vault Operations Professional
                </p>
                <img
				src="/about/certifications/hashicorp_vault_operations_professional.png" style="max-height: 100px;width: auto;"
                  class="show-dark"
                  alt="Award Image"
                />
                <p class="lb-award__date">Mar 2022</p>
              </div>
              <div class="lb-award__item has_fade_anim">
                <p class="lb-award__number">8</p>
                <p class="lb-award__title">
                  Red Hat Delivery Specialist <br /> Container Platform
                  Deployment
                </p>
                <img
				src="/about/certifications/redhat.svg" style="height: auto;max-width: 100px;"
                  class="show-dark"
                  alt="Award Image"
                />
                <p class="lb-award__date">Jun 2022</p>
              </div>
              <div class="lb-award__item has_fade_anim">
                <p class="lb-award__number">9</p>
                <p class="lb-award__title">
                  Kong <br /> Mesh Foundations
                </p>
                <img
				src="/about/certifications/kong_mesh.png" style="max-height: 100px;width: auto;"
                  class="show-dark"
                  alt="Award Image"
                />
                <p class="lb-award__date">Oct 2022</p>
              </div>
              <div class="lb-award__item has_fade_anim">
                <p class="lb-award__number">10</p>
                <p class="lb-award__title">
                  Kong <br /> Gateway Foundations
                </p>
                <img
				src="/about/certifications/kong_gateway.png" style="max-height: 100px;width: auto;"
                  class="show-dark"
                  alt="Award Image"
                />
                <p class="lb-award__date">Oct 2022</p>
              </div>
              <div class="lb-award__item has_fade_anim">
                <p class="lb-award__number">11</p>
                <p class="lb-award__title">
                  Kong <br /> Konnect Gateway Foundations
                </p>
                <img
				src="/about/certifications/kong_konnect.png" style="max-height: 100px;width: auto;"
                  class="show-dark"
                  alt="Award Image"
                />
                <p class="lb-award__date">Nov 2022</p>
              </div>
              <div class="lb-award__item has_fade_anim">
                <p class="lb-award__number">12</p>
                <p class="lb-award__title">
                  Certified Hashicorp Implementation Partner (CHIP)
                </p>
                <img
				src="/about/certifications/hashicorp_chip.png" style="max-height: 100px;width: auto;"
                  class="show-dark"
                  alt="Award Image"
                />
                <p class="lb-award__date">Dec 2022</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- Award section end -->

    <!-- Skill section start -->
    <section class="about__skill pt-130 pb-130">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <div class="about__skill-img img_anim_reveal">
              <img src="/about/skill.jpg" alt="Image" />
            </div>
          </div>
          <div class="col-md-6">
            <div class="about__skill-right">
              <div class="sec-title-wrap">
                <h2 class="sec-sub-title has_text_reveal_anim">Skills</h2>
                <h3 class="sec-title has_text_reveal_anim">My Expertise</h3>
                <div class="cf_text has_fade_anim">
                  <p>
                    I always help connect brands with customers through
                    intelligent for design & user experience strategy.
                  </p>
                </div>
              </div>
              <div class="about__skill-grid">
                <div class="progress__item has_fade_anim">
                  <h3 class="progress__label" data-width="95">Figma</h3>
                </div>
                <div class="progress__item has_fade_anim">
                  <h3 class="progress__label" data-width="80">Adobe XD</h3>
                </div>
                <div class="progress__item has_fade_anim">
                  <h3 class="progress__label" data-width="85">Sketch</h3>
                </div>
                <div class="progress__item has_fade_anim">
                  <h3 class="progress__label" data-width="75">Prototype</h3>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- Skill section end -->

    <!-- Brand area start -->
    <div class="about__brand-area pb-130">
      <div class="container">
        <div class="brand__inner">
          <div class="brand__text-wrap">
            <p class="brand__text developer text-capitalize">
              Worked for world top companies
            </p>
          </div>

          <div class="about__brand-slider">
            <div
              class="swiper brand_logo_slider"
              data-autoPlay="true"
              data-sliderSpeed="6000"
            >
              <div class="swiper-wrapper">
                <div class="swiper-slide">
                  <div class="brand__logo">
                    <img src="../assets/imgs/brand/1.png" alt="Brand Logo" />
                  </div>
                </div>
                <div class="swiper-slide">
                  <div class="brand__logo">
                    <img src="../assets/imgs/brand/2.png" alt="Brand Logo" />
                  </div>
                </div>
                <div class="swiper-slide">
                  <div class="brand__logo">
                    <img src="../assets/imgs/brand/3.png" alt="Brand Logo" />
                  </div>
                </div>
                <div class="swiper-slide">
                  <div class="brand__logo">
                    <img src="../assets/imgs/brand/1.png" alt="Brand Logo" />
                  </div>
                </div>
                <div class="swiper-slide">
                  <div class="brand__logo">
                    <img src="../assets/imgs/brand/4.png" alt="Brand Logo" />
                  </div>
                </div>
                <div class="swiper-slide">
                  <div class="brand__logo">
                    <img src="../assets/imgs/brand/5.png" alt="Brand Logo" />
                  </div>
                </div>
                <div class="swiper-slide">
                  <div class="brand__logo">
                    <img src="../assets/imgs/brand/4.png" alt="Brand Logo" />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Brand area end -->
  </main>
</Layout>

---
import BaseLayout from "../../layouts/Common.astro";
import Experience from "../../components/Experience.astro";
import Certifications from "../../components/Certifications.astro";
import Services from "../../components/Services.astro";
import Tickets from "../../components/Tickets.astro";

import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout>
  <!-- Hero area start -->
  <section class="about__hero plr-50 pt-100 pb-120">
    <div class="container">
      <div class="row">
        <div class="col-lg-4">
          <div
            class="about__experience-img cf_img img_anim_reveal"
            style="align-items:unset"
          >
            <picture>
              <source media="(max-width: 768px)" srcset="/about/lucabertelli.jpeg?format=webp&w=627 1x, /about/lucabertelli.jpeg?format=webp&w=1254 2x" type="image/webp" />
              <source media="(max-width: 768px)" srcset="/about/lucabertelli.jpeg?w=627 1x, /about/lucabertelli.jpeg?w=1254 2x" />
              <source srcset="/about/lucabertelli.jpeg?format=webp&w=473 1x, /about/lucabertelli.jpeg?format=webp&w=946 2x" type="image/webp" />
              <img src="/about/lucabertelli.jpeg?w=473" alt="Luca Bertelli" width="1000" height="1333" fetchpriority="high" decoding="async" />
            </picture>
          </div>
        </div>
        <div class="col-lg-8">
          <div class="about__hero-right">
            <h1 class="lb__hero-subtitle has_char_anim" data-on-scroll="0">{t('index.hi')}</h1>
            <h2
              class="lb__hero-title has_fade_anim"
              data-on-scroll="0"
              data-delay=".6"
            >
              Cloud Native <br />
              <span id="typed_list">
                <span>Engineer</span>
                <span>Advisor</span>
                <span>Consultant</span>
                <span>Developer</span>
              </span>
              <span id="typed"></span>
            </h2>
            <div class="cf_text has_fade_anim">
              <p style="max-width:100%">{t('index.bio')}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Hero area end -->

  <Experience />

  <Services />

  <Certifications />

  <Tickets />
</BaseLayout>

<style>
  .about__hero .row {
    display: flex;
    align-items: stretch;
  }

  .about__hero .col-lg-4 {
    display: flex;
    flex-direction: column;
  }

  .about__hero .col-lg-8 {
    display: flex;
    flex-direction: column;
  }

  .about__experience-img {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .about__experience-img picture {
    width: 100%;
    height: 100%;
    display: flex;
    flex: 1;
  }

  .about__experience-img img {
    width: 100% !important;
    height: 100% !important;
    max-width: 100%;
    object-fit: cover;
    object-position: center top;
  }

  .about__hero-right {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-left: 40px;
    flex: 1;
  }

  .lb__hero-title {
    font-size: 50px;
  }

  @media only screen and (max-width: 991px) {
    .about__hero .row {
      flex-direction: column;
    }

    .about__experience-img {
      height: auto;
      max-width: 400px;
      margin: 0 auto;
    }

    .about__experience-img picture {
      height: auto;
    }

    .about__experience-img img {
      height: auto !important;
      object-fit: contain;
    }

    .about__hero-right {
      padding-left: 0;
      padding-top: 40px;
    }

    .lb__hero-title {
      font-size: 38px;
    }
  }

  @media only screen and (max-width: 575px) {
    .lb__hero-title {
      font-size: 32px;
    }
  }
</style>

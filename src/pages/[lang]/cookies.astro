---
import BaseLayout from "../../layouts/Common.astro";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Get current date at build time
const buildDate = new Date();
const formattedDate = buildDate.toLocaleDateString(lang === 'it' ? 'it-IT' : 'en-US', {
  year: 'numeric',
  month: 'long'
});
const lastUpdatedText = lang === 'it' 
  ? `Ultimo aggiornamento: ${formattedDate}` 
  : `Last updated: ${formattedDate}`;
---

<BaseLayout>
  <section class="cookies__area plr-50 pt-120 pb-120">
    <div class="container">
      <div class="row">
        <div class="col-xxl-12">
          <div class="cookies__header mb-60">
            <h1 class="cookies__title has_char_anim" data-on-scroll="0">
              {t('cookies.title')}
            </h1>
            <p class="cookies__update">{lastUpdatedText}</p>
          </div>

          <div class="cookies__content">
            <!-- What Are Cookies -->
            <div class="cookies__section mb-50">
              <h2 class="cookies__section-title">{t('cookies.intro.title')}</h2>
              <p class="cookies__text">{t('cookies.intro.text')}</p>
            </div>

            <!-- Types of Cookies -->
            <div class="cookies__section mb-50">
              <h2 class="cookies__section-title">{t('cookies.types.title')}</h2>
              <p class="cookies__text">{t('cookies.types.intro')}</p>
              
              <div class="cookies__subsection">
                <h3 class="cookies__subsection-title">{t('cookies.types.technical.title')}</h3>
                <p class="cookies__text">{t('cookies.types.technical.text')}</p>
              </div>
              
              <div class="cookies__subsection">
                <h3 class="cookies__subsection-title">{t('cookies.types.analytics.title')}</h3>
                <p class="cookies__text">{t('cookies.types.analytics.text')}</p>
              </div>
              
              <div class="cookies__subsection">
                <h3 class="cookies__subsection-title">{t('cookies.types.profiling.title')}</h3>
                <p class="cookies__text">{t('cookies.types.profiling.text')}</p>
              </div>
            </div>

            <!-- Cookies Used on This Website -->
            <div class="cookies__section mb-50">
              <h2 class="cookies__section-title">{t('cookies.used.title')}</h2>
              <p class="cookies__text">{t('cookies.used.intro')}</p>
              <ul class="cookies__list">
                <li>{t('cookies.used.no1')}</li>
                <li>{t('cookies.used.no2')}</li>
                <li>{t('cookies.used.no3')}</li>
                <li>{t('cookies.used.no4')}</li>
              </ul>
            </div>

            <!-- Cookie Details Table -->
            <div class="cookies__section mb-50">
              <h2 class="cookies__section-title">{t('cookies.table.title')}</h2>
              <div class="cookies__table-wrapper">
                <table class="cookies__table">
                  <thead>
                    <tr>
                      <th>{t('cookies.table.name')}</th>
                      <th>{t('cookies.table.provider')}</th>
                      <th>{t('cookies.table.purpose')}</th>
                      <th>{t('cookies.table.duration')}</th>
                      <th>{t('cookies.table.type')}</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td><code>{t('cookies.cookie1.name')}</code></td>
                      <td>{t('cookies.cookie1.provider')}</td>
                      <td>{t('cookies.cookie1.purpose')}</td>
                      <td>{t('cookies.cookie1.duration')}</td>
                      <td><span class="cookies__badge">{t('cookies.cookie1.type')}</span></td>
                    </tr>
                    <tr>
                      <td><code>{t('cookies.cookie2.name')}</code></td>
                      <td>{t('cookies.cookie2.provider')}</td>
                      <td>{t('cookies.cookie2.purpose')}</td>
                      <td>{t('cookies.cookie2.duration')}</td>
                      <td><span class="cookies__badge">{t('cookies.cookie2.type')}</span></td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>

            <!-- Third-Party Cookies -->
            <div class="cookies__section mb-50">
              <h2 class="cookies__section-title">{t('cookies.thirdparty.title')}</h2>
              <p class="cookies__text">{t('cookies.thirdparty.text')}</p>
              <p class="cookies__text mt-20">
                {t('cookies.thirdparty.link')} 
                <a href="https://policies.google.com/privacy" target="_blank" rel="noopener noreferrer">policies.google.com/privacy</a>
              </p>
            </div>

            <!-- How to Manage Cookies -->
            <div class="cookies__section mb-50">
              <h2 class="cookies__section-title">{t('cookies.manage.title')}</h2>
              <p class="cookies__text">{t('cookies.manage.intro')}</p>
              
              <div class="cookies__subsection">
                <h3 class="cookies__subsection-title">{t('cookies.manage.browser.title')}</h3>
                <p class="cookies__text">{t('cookies.manage.browser.text')}</p>
                <ul class="cookies__list">
                  <li>
                    <a href="https://support.google.com/chrome/answer/95647" target="_blank" rel="noopener noreferrer">
                      {t('cookies.manage.browser.chrome')}
                    </a>
                  </li>
                  <li>
                    <a href="https://support.mozilla.org/kb/enhanced-tracking-protection-firefox-desktop" target="_blank" rel="noopener noreferrer">
                      {t('cookies.manage.browser.firefox')}
                    </a>
                  </li>
                  <li>
                    <a href="https://support.apple.com/guide/safari/manage-cookies-sfri11471/mac" target="_blank" rel="noopener noreferrer">
                      {t('cookies.manage.browser.safari')}
                    </a>
                  </li>
                  <li>
                    <a href="https://support.microsoft.com/microsoft-edge/delete-cookies-in-microsoft-edge-63947406-40ac-c3b8-57b9-2a946a29ae09" target="_blank" rel="noopener noreferrer">
                      {t('cookies.manage.browser.edge')}
                    </a>
                  </li>
                </ul>
                <p class="cookies__text cookies__note mt-20">{t('cookies.manage.note')}</p>
              </div>
            </div>

            <!-- Your Consent -->
            <div class="cookies__section mb-50">
              <h2 class="cookies__section-title">{t('cookies.consent.title')}</h2>
              <p class="cookies__text">{t('cookies.consent.text')}</p>
            </div>

            <!-- Legal Framework -->
            <div class="cookies__section mb-50">
              <h2 class="cookies__section-title">{t('cookies.legal.title')}</h2>
              <p class="cookies__text">{t('cookies.legal.intro')}</p>
              <ul class="cookies__list">
                <li>{t('cookies.legal.1')}</li>
                <li>{t('cookies.legal.2')}</li>
                <li>{t('cookies.legal.3')}</li>
                <li>{t('cookies.legal.4')}</li>
              </ul>
            </div>

            <!-- Changes to This Policy -->
            <div class="cookies__section mb-50">
              <h2 class="cookies__section-title">{t('cookies.changes.title')}</h2>
              <p class="cookies__text">{t('cookies.changes.text')}</p>
            </div>

            <!-- Contact Information -->
            <div class="cookies__section">
              <h2 class="cookies__section-title">{t('cookies.contact.title')}</h2>
              <p class="cookies__text">{t('cookies.contact.text')}</p>
              <div class="cookies__contact-box">
                <a href="mailto:info@lucabertelli.consulting" class="cookies__contact-link">
                  <i class="fa-solid fa-envelope"></i>
                  info@lucabertelli.consulting
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .cookies__area {
    background: var(--black);
  }

  .light .cookies__area {
    background: var(--white);
  }

  .cookies__header {
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    padding-bottom: 40px;
  }

  .light .cookies__header {
    border-bottom-color: rgba(0, 0, 0, 0.1);
  }

  .cookies__title {
    font-weight: 700;
    font-size: 60px;
    line-height: 1.1;
    text-transform: uppercase;
    color: var(--white);
    margin-bottom: 15px;
  }

  .light .cookies__title {
    color: var(--black);
  }

  @media only screen and (max-width: 991px) {
    .cookies__title {
      font-size: 40px;
    }

    .cookies__area {
      padding-top: 150px;
    }
  }

  @media only screen and (max-width: 575px) {
    .cookies__title {
      font-size: 32px;
    }

    .cookies__area {
      padding-top: 120px;
    }
  }

  .cookies__update {
    font-size: 16px;
    color: var(--white-3);
    font-style: italic;
  }

  .light .cookies__update {
    color: var(--black-2);
  }

  .cookies__section {
    padding: 30px 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .light .cookies__section {
    border-bottom-color: rgba(0, 0, 0, 0.05);
  }

  .cookies__section:last-child {
    border-bottom: none;
  }

  .cookies__section-title {
    font-weight: 600;
    font-size: 28px;
    line-height: 1.3;
    color: var(--white);
    margin-bottom: 20px;
    position: relative;
    padding-left: 20px;
  }

  .light .cookies__section-title {
    color: var(--black);
  }

  .cookies__section-title::before {
    content: '';
    position: absolute;
    left: 0;
    top: 5px;
    width: 4px;
    height: 24px;
    background: linear-gradient(180deg, #6366f1 0%, #8b5cf6 100%);
    border-radius: 2px;
  }

  @media only screen and (max-width: 991px) {
    .cookies__section-title {
      font-size: 22px;
    }
  }

  .cookies__subsection {
    margin-top: 25px;
    padding-left: 20px;
    border-left: 2px solid rgba(99, 102, 241, 0.3);
  }

  .cookies__subsection-title {
    font-weight: 500;
    font-size: 20px;
    color: var(--white);
    margin-bottom: 12px;
  }

  .light .cookies__subsection-title {
    color: var(--black);
  }

  .cookies__text {
    font-weight: 400;
    font-size: 17px;
    line-height: 1.8;
    color: var(--white-3);
  }

  .light .cookies__text {
    color: var(--black-2);
  }

  .cookies__text a {
    color: #6366f1;
    text-decoration: underline;
    transition: color 0.3s ease;
  }

  .cookies__text a:hover {
    color: #8b5cf6;
  }

  .cookies__list {
    list-style: disc;
    padding: 0 0 0 20px;
    margin: 20px 0 0 0;
  }

  .cookies__list li {
    font-size: 16px;
    line-height: 1.7;
    color: var(--white-3);
    padding: 8px 0;
  }

  .light .cookies__list li {
    color: var(--black-2);
  }

  .cookies__list li::marker {
    color: #6366f1;
  }

  .cookies__list a {
    color: #6366f1;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .cookies__list a:hover {
    color: #8b5cf6;
    text-decoration: underline;
  }

  .cookies__note {
    font-size: 15px;
    font-style: italic;
    opacity: 0.85;
  }

  /* Table Styles */
  .cookies__table-wrapper {
    overflow-x: auto;
    margin-top: 20px;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .light .cookies__table-wrapper {
    border-color: rgba(0, 0, 0, 0.1);
  }

  .cookies__table {
    width: 100%;
    border-collapse: collapse;
    min-width: 600px;
  }

  .cookies__table th,
  .cookies__table td {
    padding: 16px 20px;
    text-align: left;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .light .cookies__table th,
  .light .cookies__table td {
    border-bottom-color: rgba(0, 0, 0, 0.05);
  }

  .cookies__table th {
    background: rgba(99, 102, 241, 0.1);
    color: var(--white);
    font-weight: 600;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .light .cookies__table th {
    color: var(--black);
    background: rgba(99, 102, 241, 0.08);
  }

  .cookies__table td {
    color: var(--white-3);
    font-size: 15px;
  }

  .light .cookies__table td {
    color: var(--black-2);
  }

  .cookies__table tr:last-child td {
    border-bottom: none;
  }

  .cookies__table code {
    background: rgba(99, 102, 241, 0.15);
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 13px;
    color: #a5b4fc;
  }

  .light .cookies__table code {
    background: rgba(99, 102, 241, 0.1);
    color: #4f46e5;
  }

  .cookies__badge {
    display: inline-block;
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
    color: white;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 500;
  }

  .cookies__contact-box {
    margin-top: 25px;
    display: inline-block;
  }

  .cookies__contact-link {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
    color: var(--white);
    padding: 15px 30px;
    border-radius: 8px;
    font-size: 17px;
    font-weight: 500;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .cookies__contact-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(99, 102, 241, 0.3);
    color: var(--white);
  }

  .cookies__contact-link i {
    font-size: 18px;
  }

  .mt-20 {
    margin-top: 20px;
  }

  .mb-50 {
    margin-bottom: 50px;
  }

  .mb-60 {
    margin-bottom: 60px;
  }
</style>

